extends layout.pug
include utils.pug
block styles
    link(rel="stylesheet" href="/stylesheets/feed.css")
block content
    div.content-container
        h1.title Latest Posts
            each post in allPosts
                div.post-container
                    div.post-title-preview
                        h3
                            a(style="color: #F0AD8E", href=`/posts/feed/${post.id}/create-comment`)= post.header
                        div.content-preview
                            h2= post.content
                        div.user-posted
                            p(post-container__user-font) posted by user:
                                span #{post.user.username}
                                 br
                                a(href=`/posts/feed/${post.id}/edit`)
                                        i Edit
                    hr
                div.buttons
                    button(id=`like-${post.id}`) Like
                    a(id=`comment-${post.id}` href=`/posts/feed/${post.id}/create-comment`) Comment
                    a(id=`delete-${post.id}` href=`/posts/feed/${post.id}/delete`) Remove
