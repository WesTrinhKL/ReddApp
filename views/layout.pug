doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')

    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous")

    link(rel="stylesheet" href="/stylesheets/layout.css")


    title Homepage
  body


    header(class='main-nav')
      nav(class='navbar')
        a(class='navbar__home' href='/') Red
          span(class='navbar__home--second-word') App
        ul(class='navbar__links')
          if locals.authenticated
            li
              span()
            li
              span()
            li(class='')
              a(class='navbar__profile-button remove-underline' href='/users/profile')
                <i class="fas fa-user profile-icon"></i>
                span #{user.username}
            li
              a(class='navbar__logout-button remove-underline' href='/users/logout')
                  <i class="fas fa-sign-out-alt logout-icon"></i>
                  span Logout
          else
            span(class='navbar-text px-4')
              a(class='btn btn-sm btn-dark mr-2' href='/users/login') Login
              a(class='btn btn-sm btn-dark' href='/users/sign-up') Sign Up
              a(class='btn btn-sm btn-dark mr-2' href='/users/demo') Demo
    .container
        h2(class='py-4') #{title}
        block content
