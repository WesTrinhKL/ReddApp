extends layout.pug

include utils.pug

block content

    //- link(rel="stylesheet" href="/stylesheets/feed.css")
    div.content-container
        h1.title Current Posts
            each post in allPosts
                div.post-container
                    div.post-title-preview
                        h3
                            a(href="/thisRouteGoesToTheSinglePostToView")=post.header
                        div.content-preview
                            h2= post.content
                        div.user-posted
                            p(post-container__user-font) posted by user:
                                span #{post.user.username}
                    hr
